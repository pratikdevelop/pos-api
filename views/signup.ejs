<%- include('./partials/header'); %>
    <div class="flex items-start mt-10 flex-auto  justify-center">
      <form
      action="/signup"
      method="post"
        class="bg-transparent shadow-xl border-2 border-slate-200  h-8/10  rounded-md p-5 w-2/5"
      >
        <div
          class="text-center my-4 text-2xl font-bold text-green-500 uppercase"
        >
          Join our community
        </div>

        <div class="grid gap-10 mb-6 md:grid-cols-2 ">
        <div>
          <label
            for="name"
            class="block mb-2 text-base font-medium text-gray-500 dark:text-gray-500"
            >enter name</label
          >
          <input
            type="text"
            id="name"

            name="name"
            class="bg-gray-50 border border-gray-300 text-gray-500 rounded border-0  border-slate-400 border-b-2 text-base border-0 block w-full p-2 bg-transparent  border-slate-400 dark:text-gray-500  outline-0 focus:outline-0 focus:border-0 hover:border-b-3 "
            placeholder="your first name"
            required
          />
        </div>
        <div>
          <label
            for="username"
            class="block mb-2 text-base font-medium text-gray-500 dark:text-gray-500"
            >Last name</label
          >
          <input
            type="text"
            id="username"

            name="username"
            class="bg-gray-50 border border-gray-300 text-gray-500 rounded border-0  border-slate-400 border-b-2 text-base border-0 block w-full p-2 bg-transparent  border-slate-400 dark:text-gray-500  outline-0 focus:outline-0 focus:border-0 hover:border-b-3 "
            placeholder="your last name"
            required
          />
        </div>

        <div>
          <label
            for="phone"
            class="block mb-2 text-base font-medium text-gray-500 dark:text-gray-500"
            >Phone number</label
          >
          <input
            type="tel"
            id="phone"

            name="phone"
            class="bg-gray-50 border border-gray-300 text-gray-500 rounded border-0  border-slate-400 border-b-2 text-base border-0 block w-full p-2 bg-transparent  border-slate-400 dark:text-gray-500"
            placeholder="your phone number"
            pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}"
            required
          />
        </div>
        <div>
          <label
            for="email"
            class="block mb-2 text-base font-medium text-gray-500 dark:text-gray-500"
            >Email address</label
          >
          <input
            type="email"
            id="email"

            name="email"
            class="bg-gray-50 border border-gray-300 text-gray-500 rounded border-0  border-slate-400 border-b-2 text-base border-0 block w-full p-2 bg-transparent  border-slate-400 dark:text-gray-500"
            placeholder="your email address"
            required
          />
        </div>

        <div>
          <label
          for="password"
          class="block mb-2 text-base font-medium text-gray-500 dark:text-gray-500"
          >Password</label
          >
          <input
          type="password"
          id="password"

          name="password"
          class="bg-gray-50 border border-gray-300 text-gray-500 rounded border-0  border-slate-400 border-b-2 text-base border-0 block w-full p-2 bg-transparent  border-slate-400 dark:text-gray-500  outline-0 focus:outline-0 focus:border-0 hover:border-b-3 dark"
          placeholder="your password"
          required
          />
        </div>
        <div>
          <label
          for="confirm_password"
          class="block mb-2 text-base font-medium text-gray-500 dark:text-gray-500"
          >Confirm password</label
          >
          <input
          type="password"
          id="confirm_password"

          name="confirm_password"
          class="bg-gray-50 border border-gray-300 text-gray-500 rounded border-0  border-slate-400 border-b-2 text-base border-0 block w-full p-2 bg-transparent  border-slate-400 dark:text-gray-500  outline-0 focus:outline-0 focus:border-0 hover:border-b-3 dark "
            placeholder="your confirm password"
            required
            />
          </div>
          </div>
          <div class="flex items-center justify-center my-6">
            <span
            class="text-lg font-bold text-gray-500"
            style="font-family: fantasy"
            >I already have an account ?
            <a
              href="/signin"
              class="text-blue-600  hover:underline dark:text-blue-500 ml-2 py-2 px-8 unded border-indigo-600 border-2"
              >login</a
            ></span
          >
        </div>
          <button
          type="submit"
          class="text-white font-bold flex-auto bg-indigo-600 focus:outline-none focus:ring-blue-300 font-medium text-base  w-full p-5 my-3 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >
          Submit
        </button>
       
      </form>
    </div>
  </body>
</html>
